	@Override
	public boolean ccTouchesMoved(MotionEvent e) {
		// convert event location to CCPoint

		CCSprite tmp = null;
		int characterIndex;

		CGPoint p = CCDirector.sharedDirector().convertToGL(
				CGPoint.make(e.getX(), e.getY()));

		tmp = getItem(e.getX(), e.getY());

		Log.d("PBS", "GameBoard Touch position " + e.getX() + " " + e.getY());

		if (tmp != null) {
			characterIndex = hoursList.indexOf(tmp);
			Log.d("PBS", "Touch Charater Index " + characterIndex);
			// Compare Point List

			for (CGPoint cgp : movePointList) {
				if (cgp.x == tmp.getPosition().x
						&& s.height - cgp.y == tmp.getPosition().y) {

					// Log.d("PBS",pointList.size() + " " +
					// pointList.indexOf(cgp)+1);
					if (movePointList.size() == movePointList.indexOf(cgp) + 1) {
						Log.d("PBS",
								"Character POsition (1) " + tmp.getPosition().x
										+ " " + tmp.getPosition().y);
						moveCharater(characterIndex,
								horseEndPointList.get(characterIndex));
						// tmp.runAction(CCJumpTo.action(2, CGPoint.make(187,
						// s.height - 680), 50, 1));

						break;
					} else {
						Log.d("PBS",
								"Character POsition (2) " + tmp.getPosition().x
										+ " " + tmp.getPosition().y);
						// Log.d("PBS","PointLIst Index  " +
						// (pointList.indexOf(cgp)+1));
						moveCharater(characterIndex,
								(movePointList.indexOf(cgp) + 1));
						// tmp.runAction(CCJumpTo.action(0.5f,
						// CGPoint.make(pointList.get(pointList.indexOf(cgp)+1).x,
						// s.height-pointList.get(pointList.indexOf(cgp)+1).y),
						// 50, 1));
						break;
					}
				}
			}

			// if(!((int)(s.width*0.34) == tmp.getPosition().x && s.height
			// -(int)(s.height*0.7) == tmp.getPosition().y )){
			if ((horsePointList.get(characterIndex).x == tmp.getPosition().x && horsePointList
					.get(characterIndex).y == tmp.getPosition().y)
					&& (horseEndPointList.get(characterIndex).x == tmp
							.getPosition().x && horseEndPointList
							.get(characterIndex).y != tmp.getPosition().y)) {
				Log.d("PBS", "Character POsition (3) " + tmp.getPosition().x
						+ " " + tmp.getPosition().y);
				moveCharater(characterIndex, 0);
			}
			// tmp.setPosition(pointList.get(0).x,s.height-pointList.get(0).y);

			//
			// if(!(tmp.getPosition().x == 273 && tmp.getPosition().y ==
			// s.height -546 )){
			// tmp.setPosition(273,s.height-546);
			// //tmp.runAction(CCJumpTo.action(4, CGPoint.make(300, 48), 100,
			// 1));
			// }else if(tmp != null && (tmp.getPosition().x == 273 &&
			// tmp.getPosition().y == s.height -546 )){
			// tmp.runAction(CCJumpTo.action(3, CGPoint.make(379, s.height-526),
			// 50, 1));
			// }else if(tmp != null){
			// Log.d("PBS","TOuch Position : " + tmp.getPosition().x + " "+
			// tmp.getPosition().y);
			// }

		}
		// Log.d("PBS", "Current Position : " + e.getX() + " " + e.getY());

		if (tmp == null && isSelect == true) {
			// selectMob.setPosition(p.x, p.y);
			// update the position of your sprite
